<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="lanzarPago"
        android:text="Donar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView7"
        style="@style/LABELSTECmini"
        android:textColor="#CC00FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <TextView
        android:id="@+id/textView8"
        style="@style/LABELSFILMSmini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Daizy!"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="73dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:srcCompat="@drawable/img" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <TextView
        android:id="@+id/textView9"
        style="@style/etiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Bienvenida nuevamente"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="195dp"
        android:layout_height="43dp"
        android:layout_marginTop="124dp"
        android:queryHint="@string/buscar"
        android:theme="@style/CustomSearchView"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />


    <ImageButton
        android:id="@+id/imageButton4"
        style="@style/btnesSeries"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="lanzar3"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:srcCompat="@drawable/movies3" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/btnesSeries"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:onClick="favoritos"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:srcCompat="@drawable/estrellaotra" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/btnesSeries"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:onClick="lanzar1"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:srcCompat="@drawable/movie2" />

    <TextView
        android:id="@+id/textView10"
        style="@style/nmOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:onClick="lanzar1"
        android:text="Series"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <TextView
        android:id="@+id/textView11"
        style="@style/nmOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:onClick="favoritos"
        android:text="Top 10"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <TextView
        android:id="@+id/textView13"
        style="@style/nmOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        android:onClick="lanzar3"
        android:text="Peliculas"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

    <TextView
        android:id="@+id/textView12"
        style="@style/nmOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="20dp"
        android:text="Exitos"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />


    <ImageButton
        android:id="@+id/imageButton3"
        style="@style/btnesSeries"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:srcCompat="@drawable/img_3" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <TextView
        android:id="@+id/textView14"
        style="@style/LABELSFILMSmini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TecFilms Series"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ViewFlipper
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:autoStart="true"
        android:flipInterval="4000"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.228">

        <ImageView
            android:id="@+id/wednesday"
            style="@style/PeliCULAS"
            android:layout_width="274dp"
            android:layout_height="279dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/serieswednesday"
            tools:layout_editor_absoluteX="-57dp"
            tools:layout_editor_absoluteY="557dp" />

        <ImageView
            android:id="@+id/imageView5"
            style="@style/PeliCULAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/p3"
            tools:layout_editor_absoluteX="-57dp"
            tools:layout_editor_absoluteY="557dp" />

        <ImageView
            android:id="@+id/reasons"
            style="@style/PeliCULAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/seriereasons"
            tools:layout_editor_absoluteX="-57dp"
            tools:layout_editor_absoluteY="557dp" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/PeliCULAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/poster1"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="557dp" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/PeliCULAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:srcCompat="@drawable/poster2"
            tools:layout_editor_absoluteY="557dp" />

    </ViewFlipper>

    <!--TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hello World"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"/-->

</androidx.constraintlayout.widget.ConstraintLayout>